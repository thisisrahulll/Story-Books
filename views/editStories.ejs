<!--Section: Contact v.2-->
<section class="mb-4">

    <!--Section heading-->
    <h2 class="h1-responsive font-weight-bold text-center my-4">Edit Your Story</h2>
    <div class="row justify-content-center">

        <!--Grid column-->
        <div class="col-md-9 mb-md-0 mb-5">
            <% 
            if (errs.length>0){ %>
                <% errs.forEach(err=>{ %>
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <strong><%= err  %></strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <% }) %>
                        <% } %>
                            <form id="contact-form" name="contact-form" action="/stories/edit/<%= story._id%>" method="POST">
                                <div class="row my-2">
                                    <div class="col-md-12">
                                        <div class="md-form mb-0">
                                            <input type="text" id="subject" name="tittle" value="<%= story.tittle%>" class="form-control">
                                            <label for="subject" class="">Tittle</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row my-2 mt-4">
                                    <div class="col-md-12">
                                        <div class="dropdown">
                                            <div class="select">
                                                <span>Status</span>
                                                <i class="fa fa-chevron-left"></i>
                                            </div>
                                            <input type="hidden" name="status">
                                            <ul class="dropdown-menu">
                                                <li id="private">Private</li>
                                                <li id="public">Public</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="row my-2">
                                    <div class="col-md-12">
                                        <h5 class="mt-4">Tell us your story </h5>
                                        <div class="md-form">
                                            <textarea name="body" id="editor" cols="30" rows="10" class="form-control md-textarea"><%= story.body%></textarea>
                                        </div>

                                    </div>
                                </div>
                            </form>

                            <div class="text-center text-md-left">
                                <a class="btn btn-primary" onclick="document.getElementById('contact-form').submit();">Save</a>
                                <a href="/dashboard" class="btn btn-primary">Cancel</a>
                            </div>
                            <div class="status"></div>
        </div>
    </div>
</section>